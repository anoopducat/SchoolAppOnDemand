<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.schoolappondemand.MyProfile">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />

    <TextView
        android:text="Hello I am User"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:id="@+id/profile_tv_name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/if_profile"
        android:layout_marginTop="33dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/profile_tv_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <View
        android:id="@+id/v4"
        android:layout_width="1dp"
        android:layout_height="118dp"
        android:layout_marginStart="120dp"
        android:background="@android:color/black"
        android:layout_below="@+id/profile_tv_name"

        />


    <TextView
        android:text="Admission No:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:textColor="@color/colorBlack"
        android:id="@+id/Admission"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignTop="@+id/imageView" />

    <TextView
        android:text="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="100dp"
        android:id="@+id/profile_ad_no"
        android:layout_alignBaseline="@+id/Admission"
        android:layout_alignBottom="@+id/Admission"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Class :"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/Admission"
        android:layout_alignStart="@+id/Admission"
        android:id="@+id/tv_class" />

    <TextView
        android:text="Class NAME"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_class"
        android:layout_alignRight="@+id/profile_ad_no"
        android:layout_alignEnd="@+id/profile_ad_no"
        android:layout_marginRight="35dp"
        android:layout_marginEnd=".1dp"
        android:layout_marginStart="200dp"
        android:id="@+id/profile_tv_cls" />







    <TextView
        android:text="Class Teacher :"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_class"
        android:layout_marginTop="43dp"
        android:id="@+id/tv_cls_taecher" />

    <TextView
        android:text="Teacher Name"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_cls_taecher"
       android:layout_marginStart="200dp"
        android:layout_marginRight="94dp"
        android:id="@+id/profile_tv_teacher" />

    <TextView
        android:text="Mobile No :"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cls_taecher"
        android:layout_alignLeft="@+id/tv_cls_taecher"
        android:layout_alignStart="@+id/tv_cls_taecher"
        android:layout_marginTop="37dp"
        android:id="@+id/tv_mobile" />

    <TextView
        android:text="Mob No"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_alignTop="@+id/tv_mobile"
        android:id="@+id/tv_profile_mob" />

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@id/tv_profile_mob"/>


    <TextView
        android:text="My Family :"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mobile"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="20dp"
        android:id="@+id/t_family" />

    <TextView
        android:text="Father"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_family"
        android:layout_alignLeft="@+id/tv_mobile"
        android:layout_alignStart="@+id/tv_mobile"
        android:layout_marginTop="24dp"
        android:id="@+id/profile_father" />

    <TextView
        android:text="Mother :"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_father"
        android:layout_alignLeft="@+id/profile_father"
        android:layout_alignStart="@+id/profile_father"
        android:layout_marginTop="27dp"
        android:id="@+id/profile_mother" />

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@id/profile_mother"/>


    <TextView
        android:text="MyAddress :"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_mother"
        android:layout_marginTop="37dp"
        android:id="@+id/tv_address" />

    <TextView
        android:text="Address"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_address"
        android:layout_below="@+id/tv_address"

        android:layout_marginLeft="1dp"
        android:paddingTop="40dp"

        />


</RelativeLayout>

</ScrollView>